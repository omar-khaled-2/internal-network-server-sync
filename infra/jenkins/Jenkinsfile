pipeline {
    agent any
    triggers {
        pollSCM('H/5 * * * *')
    }
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        stage('Build') {
            steps {
                // Tag with the unique BUILD_NUMBER
                sh "docker build -t internal-backend:${BUILD_NUMBER} ./services/backend"
            }
        }
        stage('Deploy') {
            steps {
                withCredentials([file(credentialsId: 'kubeconfig-jenkins', variable: 'KUBECONFIG')]) {
                    // Tell Helm to use that specific tag
                    sh "helm upgrade --install app ./infra/chart --set backend.image.tag=${BUILD_NUMBER}"
                }
            }
        }
    }
}
